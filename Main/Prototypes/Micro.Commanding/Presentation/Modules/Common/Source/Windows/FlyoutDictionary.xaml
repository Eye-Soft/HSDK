<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:viewModels="clr-namespace:EyeSoft.Architecture.Prototype.Windows.Model.ViewModels;assembly=EyeSoft.Architecture.Prototype.Windows.Model">

    <viewModels:FlyoutContentConverter x:Key="FlyoutContent" />
    
    <ControlTemplate x:Key="FlyoutView">
        <DockPanel LastChildFill="True" Margin="5">
            <Label DockPanel.Dock="Top" Content="{Binding Title}" Padding="0"/>
            <TextBox Text="{Binding Description}" Width="200" Background="Transparent"/>
        </DockPanel>
    </ControlTemplate>
    
</ResourceDictionary>