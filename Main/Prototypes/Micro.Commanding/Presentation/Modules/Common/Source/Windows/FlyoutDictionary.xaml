<ResourceDictionary 
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:viewModels="clr-namespace:EyeSoft.Architecture.Prototype.Windows.Model.ViewModels;assembly=EyeSoft.Architecture.Prototype.Windows.Model"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d">

	<viewModels:FlyoutContentConverter x:Key="FlyoutContent" />
	
	<ControlTemplate x:Key="FlyoutView">
		<DockPanel Width="300" LastChildFill="True" Margin="5" d:DataContext="{d:DesignInstance viewModels:FlyoutViewModel}">
			<Label DockPanel.Dock="Top" Content="{Binding Title}" Padding="0"/>
			<TextBox Text="{Binding Detail}" Background="Transparent"/>
		</DockPanel>
	</ControlTemplate>
</ResourceDictionary>